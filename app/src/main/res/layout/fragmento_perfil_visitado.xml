<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.Fragmentos.FragmentoPerfilVisitado">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMascotas"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@+id/layoutbotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutbotones" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewPerfilMascota"
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logoapk"
        app:civ_border_color="@color/gris"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPublicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Publicaciones"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/textViewNombreMascota"
        app:layout_constraintTop_toBottomOf="@id/tvNumPublicaciones"/>

    <TextView
        android:id="@+id/tvSeguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Seguidores"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/tvPublicaciones"
        app:layout_constraintEnd_toStartOf="@id/tvSeguidos"
        app:layout_constraintTop_toTopOf="@+id/tvPublicaciones" />

    <TextView
        android:id="@+id/tvSeguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:text="Seguidos"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSeguidores" />

    <TextView
        android:id="@+id/tvNumPublicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvPublicaciones"
        app:layout_constraintEnd_toEndOf="@+id/tvPublicaciones"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreMascota"/>

    <TextView
        android:id="@+id/tvNumSeguidores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tvSeguidores"
        app:layout_constraintEnd_toEndOf="@+id/tvSeguidores"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreMascota" />

    <TextView
        android:id="@+id/tvNumSeguidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tvSeguidos"
        app:layout_constraintEnd_toEndOf="@+id/tvSeguidos"
        app:layout_constraintTop_toBottomOf="@id/textViewNombreMascota"/>

    <LinearLayout
        android:id="@+id/layoutbotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/imageViewPerfilMascota"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcionMascota">

        <Button
            android:id="@+id/botonEnviarMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:text="Enviar mensaje"
            android:textAllCaps="false"
            android:textSize="12dp" />

        <Button
            android:id="@+id/botonseguir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textSize="12dp"
            android:textAllCaps="false"/>



    </LinearLayout>

    <TextView
        android:id="@+id/textViewNombreMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Nombre Mascota"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/imageViewPerfilMascota"
        app:layout_constraintTop_toTopOf="@+id/imageViewPerfilMascota" />

    <TextView
        android:id="@+id/textViewDescripcionMascota"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:text="DescripciÃ³n corta de la mascota"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="@+id/imageViewPerfilMascota"
        app:layout_constraintTop_toBottomOf="@+id/tvPublicaciones" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPublicaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="75dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:spanCount="3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/th_solid"
        android:drawablePadding="8dp"
        android:text="PUBLICACIONES"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewPublicaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewMascotas"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
