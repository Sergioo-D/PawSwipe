<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.Activities.ActivityModificar">

    <EditText
        android:id="@+id/etNusername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_de_usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />

    <EditText
        android:hint="@string/nombre_completo"
        android:id="@+id/etNfullname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNusername"
        app:layout_constraintVertical_bias="0.0"
         />

    <Button
        android:id="@+id/bUpdate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/guardar_cambios"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNfullname"
        app:layout_constraintVertical_bias="0.144" />

    <ImageView
        android:id="@+id/foto_perfil"
        android:layout_width="177dp"
        android:layout_height="133dp"
        app:layout_constraintBottom_toTopOf="@+id/etNusername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846"
        app:srcCompat="@drawable/logoapk1"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
