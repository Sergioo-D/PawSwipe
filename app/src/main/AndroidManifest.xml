<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".vista.Activities.ActivityPublicacion"
            android:exported="false" />
        <activity
            android:name=".vista.Activities.ActivityRegistroMascota"
            android:exported="false" />
        <activity
            android:name=".vista.Activities.ActivityMD"
            android:exported="false" />
        <activity
            android:name=".vista.Activities.ActivityModificar"
            android:parentActivityName=".vista.Activities.ActivityHome"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vista.Activities.ActivityHome" />
        </activity>

        <activity
            android:name=".vista.Activities.ActivityHome"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".vista.Activities.ActivityRegistro"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.Activities.ActivityRecuperarPass"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.Activities.ActivityLogin"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>